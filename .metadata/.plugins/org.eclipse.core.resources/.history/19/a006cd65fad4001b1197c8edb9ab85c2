package DAO;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import DBManager.DBManager;

public class ProductDAO {
	Connection conn = null;
	PreparedStatement pstmt = null;
	ResultSet rs = null;
	
	DBManager dbm = new DBManager();
	
	public void setAboutByBno(String habbitKey, String habbitValue, int bnoAbout) {
		
		try {
			String sql = "insert into about (orderbno, custno, title, content)"
					+ " values (about_seq.nextval, ?, ?, ?)";
			
			conn = dbm.getConnection();
			pstmt = conn.prepareStatement(sql);
			pstmt.setInt(1, bnoAbout);
			pstmt.setString(2, habbitKey);
			pstmt.setString(3, habbitValue);
			
			pstmt.executeUpdate();
		} catch (Exception e) {
			e.printStackTrace();
		}finally {
			dbm.close(conn, pstmt);
		}
		
	}
}
